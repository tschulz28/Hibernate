<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- Datenbankverbindung -->
        <!--driver_class is the driver for the database, e.g. H2 (in Mem), MySql, PostgreSQL -->
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <!-- Connection URL to database -->
        <property name="hibernate.connection.url">jdbc:h2:mem:testdb</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password"></property>

        <!-- Dialekt -->
        <!-- SQL for the database, e.g. MySQLDialect, PostgreSQLDialect, OracleDialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>

        <!-- Automatisches Schema -->
        <!-- create: creates schema on every start
             update: updates schema without deleting data
             validate: validates whether schema is fine
             none: does nothing at all -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Logging -->
        <!-- Show SQL statements in console,
             helpful for learning -->
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>

        <!-- Entity-Klasse -->
        <mapping class="com.example.Message"/>
    </session-factory>
</hibernate-configuration>
